#!/bin/bash
# Wrapper for Kubeflow CLI

VENV_PATH="/usr/local/bin/kube-config/venv"
CLI_PATH="/usr/local/bin/kube/cli.py"
ENV_FILE="/usr/local/bin/kube-config/worker.env"

# Load environment variables if file exists
if [[ -f "$ENV_FILE" ]]; then
    source "$ENV_FILE"
fi

source "$VENV_PATH/bin/activate"

python3 "$CLI_PATH" "$@"
